<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"メールアドレス※" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード※" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード (確認用)※" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"ユーザーネーム※"  %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :"性別※" %><br />
    <%= f.text_field :sex, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"身長" %><br />
    <%= f.text_field :height, autofocus: true %>cm
  </div>

  <div class="field">
    <%= f.label :"体重" %><br />
    <%= f.text_field :weight, autofocus: true %>kg
  </div>

  <div class="field">
    <%= f.label :"骨格" %><br />
    <%= f.text_field :skelton, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"体型" %><br />
    <%= f.text_field :body, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"普段着ているサイズ" %><br />
    <%= f.text_field :close_size, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :"パーソナルカラー" %><br />
    <%= f.text_field :pasonal_color, autofocus: true %>
  </div>

  <p class="input_coution text-danger" >※必須入力</p>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
