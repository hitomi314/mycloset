<div class="container">
  <div class="row my-3">
    <div class="ccol-lg-11 offset-lg-1">
      <%= form_with model:@user, url:edit_mypage_path, local:true do |f| %>
      <table class="user_table">
        <tr>
          <th class="customer_edit_th">メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th class="user_edit_th">ユーザーネーム</th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="user_edit_th">性別</th>
          <td>
            <%= f.label :女  %>
            <%= f.radio_button :sex, :女 %>
            <%= f.label :男  %>
            <%= f.radio_button :sex, :男 %>
          </td>
        </tr>
         <tr>
          <th class="user_edit_th">身長</th>
          <td><%= f.select :height, User.heights.keys, prompt: @user.height, class: "height-select" %></td>
            <!--selectフォームではUser.heights.keysのモデル名.カラム名.keysのカラム名は複数形になる。選択肢が一つでも複数形-->
        </tr>
          <th class="user_edit_th">体重</th>
          <td> <%= f.select :weight, User.weights.keys, prompt: @user.weight, class: "weight-select" %></td>
        </tr>
          <th class="user_edit_th">骨格</th>
          <td><%= f.text_field :skelton %></td>
        </tr>
        <tr>
          <th class="user_edit_th">体型</th>
          <td><%= f.text_field :body %></td>
        </tr>
        <tr>
          <th class="user_edit_th">普段着ているサイズ</th>
          <td><%= f.text_field :close_size %></td>
        </tr>
        <tr>
          <th class="user_edit_th">パーソナルカラー</th>
          <td><%= f.text_field :pasonal_color %></td>
        </tr>
      </table>

      <div>
        <%= f.submit "編集内容を保存",class: "btn btn-sm btn-success" %>
        <% end %>
      </div>
      <br>
      <div>
        <%= link_to "退会する",users_caution_path , method: :POST, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
  </div>
</div>
