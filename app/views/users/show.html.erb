<div class="container">
  <div class="row">
    <div class="col-4">
      <%= render 'users/info', user: @user %>
    </div>
    <div class="col-7">
      <h3 class="review p-1" style="background-color: #DDA0DD;">レビュー一覧</h3>
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
           <th>ユーザーネーム</th>
            <th>アイテム名</th>
            <th>ブランド名</th>
            <th>カラー</th>
            <th>評価</th>
            <th colspan="5"></th>
          </tr>
        </thead>
         <% @reviews.each do |review| %>
           <tr>
              <td><%= link_to review.user.name,user_path(review.user_id) %></td>
              <td class="item_name"><%= link_to review.name,user_item_review_path(review.user_id, review.item_id, review) %></td>
              <td class="item_brand"><%= review.brand %></td>
              <td class="item_color"><%= review.item.color %></td>
              <td class="item_brand"><%= review.rate %></td>
              <td id="favo_<%= review.id %>" style="font-size: 20px;"><%= render 'reviews/favo', review: review %></td>
           </tr>
          <% end %>
      </table>
      <%= paginate @reviews %>
    </div>
  </div>
</div>