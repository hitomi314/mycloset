  <%= form_tag(saerch_path, method: :get) do %>
  <%= text_field_tag 'content' %>
  <%= select_tag 'model', options_for_select({ "アイテム（アイテム名）" => "itemname", "アイテム（ブランド名）" => "itembrand","レビュー（アイテム名）" => "reviewname","レビュー（ブランド名）" => "reviewbrand" }) %>
