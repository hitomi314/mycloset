<!DOCTYPE html>
<html>
  <head>
    <title>Mycloset</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-white border">
      <div class="container">
        <%= link_to root_path do %>
          <strong>MyCloset</strong>
        <% end %>
        <% if user_signed_in? %>
          <span class="fas text-danger"><%= current_user.name %>'s Closet</span>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <li><%= link_to ' マイページ',mypage_path ,class: 'fas fa-address-card nav-link text-danger' %></li>
            <li><%= link_to ' ブックマーク',user_bookmarks_path(current_user) ,class: 'fas fa-bookmark nav-link text-danger' %></li>
            <li><%= link_to ' アイテム',user_items_path(current_user) ,class: 'fas fa-tshirt nav-link text-danger'%></li>
            <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-danger' %></li>
            <%= form_with url:search_path, method: :get, local: true do |f| %>
              <%= f.text_field 'search[value]' %>
              <%= f.select 'search[how]', options_for_select({ "完全一致" => "match", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partical"  }) %>
              <%= f.submit :"検索" %>
            <% end %>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>
</html>
