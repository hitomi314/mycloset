<div class="container">
  <% if @style.errors.any? %>
    <%= @style.errors.count %>件のエラーが発生しました
    <% @style.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="row">
    <div class="col-5-text_center">
      <h4>スタイル情報</h4>
        <%= form_with model: @style, url: user_styles_path, local:true do |f| %>
          <p>スタイル名</p>
          <p><%= f.text_field :name %></p>
          <%= f.submit '新規登録' %>
        <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-10-text_center">
      <table>
        <thead>
          <tr>
            <th>スタイル名</th>
            <th colspan="2"></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @styles.each do |style| %>
        <tbody>
          <tr>
            <td class="address_index_list_td"><%= style.name %></td>
            <td class="address_index_list_td_edit_and_destroy">
              <span><%= link_to "編集する", edit_user_style_path(@user, style), class: 'btn btn-sm btn-success' %></span>
              <span><%= link_to "削除する", user_style_path(@user, style), class: 'btn btn-sm btn-danger', method: :delete %></span>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>